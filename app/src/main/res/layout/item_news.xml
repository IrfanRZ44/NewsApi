<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/CustomTheme"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/h2"
        app:cardElevation="@dimen/h1"
        android:layout_margin="@dimen/h2"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFoto"
                android:layout_width="@dimen/_100"
                android:layout_height="@dimen/_100"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:text="@string/title"
                android:fontFamily="@font/bauhaus"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/imgFoto"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h2"
                android:text="@string/description"
                android:fontFamily="@font/bauhaus"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_below="@+id/textNama"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSource"
                android:text="@string/sumber"
                android:background="@drawable/btn_gradient_red"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h1"
                android:minHeight="30dp"
                android:minWidth="60dp"
                android:layout_toEndOf="@+id/imgFoto"
                android:layout_below="@+id/textDeskripsi"
                android:layout_marginStart="@dimen/h2"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray2"
                android:textSize="@dimen/text_h2"
                android:text="@string/tanggal"
                android:fontFamily="@font/bauhaus"
                android:maxLines="1"
                android:paddingBottom="@dimen/h1"
                android:paddingEnd="@dimen/h1"
                android:paddingStart="@dimen/h2"
                android:layout_below="@+id/btnSource"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>