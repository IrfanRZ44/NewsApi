<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.exomatik.news.ui.news.detailNews.DetailNewsFragment">
    <data>
        <variable
            name="viewModel"
            type="id.exomatik.news.ui.news.detailNews.DetailNewsViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CustomStyle"
        android:background="@drawable/bg_news"
        snackbar="@{viewModel.status}"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/h5"
            android:id="@+id/scrollView"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200"
                    android:background="@color/gray1"
                    android:src="@drawable/ic_camera_white"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imgFoto"
                    android:scaleType="centerCrop"
                    imageBoxSrc="@{viewModel.dataNews.urlToImage}"
                    android:onClick="@{()-> viewModel.clickFoto()}"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMain"
                    android:layout_below="@+id/imgFoto"
                    style="@style/cardView"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/h5"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="@dimen/h2"
                    android:layout_marginEnd="@dimen/h2"
                    app:cardCornerRadius="@dimen/h2"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/h2"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textStandardWhite"
                            android:textSize="@dimen/text_h4"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/h2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:id="@+id/textInfo"
                            android:text="@string/about_news"
                            android:fontFamily="@font/bauhaus"
                            />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/title"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataNews.title}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/release_date"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataNews.publishedAt}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/author"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataNews.author}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/sumber"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataNews.source.name}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/description"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.02"
                                android:text="@string/titik_dua"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h2"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="0.58"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@={viewModel.dataNews.description}"
                                android:textSize="@dimen/text_h2"
                                android:fontFamily="@font/bauhaus"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSource"
                            android:text="@string/visit_link"
                            android:background="@drawable/btn_gradient_red"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_h2"
                            android:minHeight="35dp"
                            android:minWidth="70dp"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            android:onClick="@{()-> viewModel.clickLink()}"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/h3"
                            android:layout_below="@+id/scrollView"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            visible="@{viewModel.isShowLoading}"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStandardWhite"
            android:textSize="@dimen/text_h3"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/textStatus"
            showTextStatus="@{viewModel.message}"
            />
    </RelativeLayout>
</layout>